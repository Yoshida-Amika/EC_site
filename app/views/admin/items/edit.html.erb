<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>

  <p> <label for="inputImage">商品画像</label>
      <%= f.file_field :image, placeholder: "画像", accept: "image/*" %> </p>
  <p><label for="inputName">商品名</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%> </p>
  <p> <label for="inputName">商品説明</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"商品説明"%> </p>
  <p> <label for="inputName">税抜価格</label>
      <%= f.number_field :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格"%> </p>

<%= f.submit "変更を保存" %>

<% end %>