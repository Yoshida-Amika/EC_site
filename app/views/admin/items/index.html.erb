<h2>商品一覧
<%= link_to  new_admin_item_path do  %><i class="fa-solid fa-circle-plus"></i>
<% end %> </h2>

<div class="col-9">
<table class="table">
    <thead>
        <tr class="table-secondary">
            <th scope = "col">商品ID</th>
            <th scope = "col">商品名</th>
            <th scope = "col">税抜価格</th>
        </tr>
    </thead>

    <tbody>
      <% @item.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
      </tr>
      <% end %>
    </tbody>
</div>




