<h2>商品新規登録</h2>

<%= form_with model: @item, url:admin_items_path do |f| %>

 <div class="form-group">
     <p><label for="inputName" class="col-sm-2">商品画像</label>
        <%= f.file_field :image, accept: "image/*" %>
     </p>

     <p><label for="inputName" class="col-sm-2">商品名</label>
        <%= f.text_field :name %>
     </p>
     <p><label for="inputName" class="col-sm-2">商品説明</label>
        <%= f.text_area :introduction %>
     </p>
     <p><label for="inputName" class="col-sm-2">税抜価格</label>
        <%= f.number_field :price %>円
     </p>
 </div>

    <%= f.submit '新規登録', class:"btn btn-success" %>

<% end %>