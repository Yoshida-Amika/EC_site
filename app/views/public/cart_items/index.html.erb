<h2>ショッピングカート <%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete %></h2>

<% @cart_items.each do |cart_item| %>
<% @total = @total+ cart_item.subtotal %>

    <p><%= image_tag cart_item.item.image, size: "100x100" %></p>
    <p>商品名<%= cart_item.item.name %> </p>
    <p>単価（税込）<%= cart_item.item.add_tax_price.to_s(:dalimited) %> </p>
    <p>数量 <%= cart_item.amount %></p>
    <p>小計 <%= cart_item.subtotal %> </p>
    <%= button_to "削除する", cart_item_path(cart_item), method: :delete %>


<% end %>

<%= link_to "買い物を続ける", root_path(@customer_id) %>
<p> 合計金額<%= @total %></p>

<%= link_to "情報入力に進む",  new_order_path %>
