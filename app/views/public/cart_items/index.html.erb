<h2>ショッピングカート</h2>
<button type="button" class="btn btn-danger">
    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
</button>

<table class="table table-bordered border-bark">
    <thead>
        <tr>
            <th scope = "col">商品名</th>
            <th scope = "col">単価(税込)</th>
            <th scope = "col">数量</th>
            <th scope = "col">小計</th>
            <th scope = "col"> </th>
        </tr>
    </thead>

<tbody>
    <tr>
    <% @cart_items.each do |cart_item| %>
    <% @total = @total+ cart_item.subtotal %>


    <td><%= image_tag cart_item.item.image, size: "100x100" %>
        <%= cart_item.item.name %> </td>
    <tb><%= cart_item.item.add_tax_price.to_s(:dalimited) %> </tb>
    <tb><%= cart_item.amount %></tb>
    <tb><%= cart_item.subtotal %> </tb>
    <button type="button" class="btn btn-danger">
    <%= link_to "削除する", cart_item_path(cart_item), method: :delete %>
    </button>

    <% end %>
    </tr>
</tbody>

<button type="button" class="btn btn-primary">
<%= link_to "買い物を続ける", root_path(@customer_id) %>
</button>

<p> 合計金額<%= @total %></p>

<button type="button" class="btn btn-success">
<%= link_to "情報入力に進む",  new_order_path %>
</button>
