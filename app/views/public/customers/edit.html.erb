<h2>会員情報編集</h2>

<%= form_with model: @customer  do |f| %>

<p><label for="inputName">氏名</label>
      <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"姓"%>
      <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名前"%> </p>
  <p> <label for="inputName">フリガナ</label>
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"姓カナ"%>
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"名カナ"%> </p>
  <p> <label for="inputName">郵便番号</label>
      <%= f.number_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号"%> </p>
  <p> <label for="inputName">住所</label>
      <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所"%> </p>
  <p> <label for="inputName">電話番号</label>
      <%= f.number_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号"%> </p>
  <p> <label for="inputName">メールアドレス</label>
      <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス"%> </p>

  <%= f.submit "編集内容を保存" %>
  <%= link_to "退会する",  confirmation_path %>

  <% end %>
