<h2 class="table-secondary">マイページ</h2>

<h2>登録情報
<button type="button" class="btn btn-success"><%= link_to "編集する", edit_customer_path %></button></h2>

<tobody>
  <td colspan="2">
    <table class="table table-bordered border-bark">

    <colgroup>
      <col class="col-md-4">
      <col class="col-md-7">
    </colgroup>

      <tr>
        <th scope="row" class="table-secondary">氏名</th>
        <th><%= @customer.last_name + @customer.first_name %></th>
      </tr>
      <tr>
        <th scope="row" class="table-secondary">カナ</th>
        <th><%= @customer.last_name_kana + @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th scope="row" class="table-secondary">郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th scope="row" class="table-secondary">住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th scope="row" class="table-secondary">電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th scope="row" class="table-secondary">メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>

    </table>
  </tb>
</tobody>





<p>配送先</p>
<button type="button" class="btn btn-primary"><%= link_to "一覧を見る" %></button>

