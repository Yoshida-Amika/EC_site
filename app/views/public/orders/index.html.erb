<% @order.each do |order| %>

<p>注文日 <%= order.created_at.strftime('%Y/%m/%d') %></p>

<p>配送先</p>
<p>〒<%= order.postal_code %></p>
<p><%= order.address %></p>
<p><%= order.addressee %></p>

<p>注文商品
<% order.order_details.each do |order_detail| %>
<%= order_detail.item.name %>
<% end %>
</p>

<p>支払金額<%= order.payment_amount %></p>

