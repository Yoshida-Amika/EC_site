<h2>注文履歴一覧</h2>


<% @order.each do |order| %>

<p>注文日 <%= order.created_at.strftime('%Y/%m/%d') %></p>

<p>配送先</p>
<p>〒<%= order.postal_code %></p>
<p><%= order.address %></p>
<p><%= order.addressee %></p>

<p>注文商品
<% order.order_details.each do |order_detail| %>
<p><%= order_detail.item.name %></p>
<% end %>
</p>

<p>支払金額<%= order.payment_amount %>円</p>

<%= link_to "表示する", order_path(order.id) %>

<% end %>
