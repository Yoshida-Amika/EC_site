<h2>注文履歴一覧</h2>

<div class="col-9">
<table class="table table-bordered border-bark">
    <thead>
        <tr class="table-secondary">
            <th scope = "col">注文日</th>
            <th scope = "col">配送先</th>
            <th scope = "col">注文商品</th>
            <th scope = "col">支払金額</th>
            <th scope = "col">注文詳細</th>
        </tr>
    </thead>

<tbody>
  <% @order.each do |order| %>

  <tr>
    <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
    <th>
      <p>〒<%= order.postal_code %></p>
      <p><%= order.address %></p>
      <p><%= order.addressee %></p>
    </th>
    <th>
      <% order.order_details.each do |order_detail| %>
        <p><%= order_detail.item.name %></p>
      <% end %>
    </th>
    <th><%= order.payment_amount %>円</th>
    <th><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></th>
  </tr>
  <% end %>
</tbody>
</div>
