<h2>注文履歴詳細</h2>

<div class="row">
  <div class="col-7">
    <h4>注文情報</h4>
    <tbody>
      <td colsoan="2">
        <table class="table">
          <tr>
            <th scope="row" class="table-secondary">注文日</th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">配送先</th>
            <th>
              <p>〒<%= @order.postal_code %></p>
              <p><%= @order.address %></p>
              <p><%= @order.addressee %></p>
            </th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">支払方法</th>
            <th><%= @order.payment_method_i18n %></th>
          </tr>
        </table>
      </td>
    </tbody>
  </div>


  <div class="col-3">
    <h4>請求情報</h4>
    <tbody>
      <td colsoan="2">
        <table class="table">
          <tr>
            <th scope="row" class="table-secondary">商品合計</th>
            <th><%= @order.order_details.sum(&:subtotal) %></th>
          </tr>
          <tr>
            <th scope="row" class="table-secondary">配送先</th>
            <th><%= @postage %></th>
          </tr>
           <tr>
            <th scope="row" class="table-secondary">ご請求額</th>
            <th><%= @order.payment_amount %></th>
          </tr>
        </table>
      </td>
    </tbody>
  </div>
</div>

<div class="col-7">
  <h4>注文内容</h4>
    <td colsoan="2">
      <table class="table">
        <tbody>
              <tr class="table-secondary">
                <th scope = "col">商品</th>
                <th scope = "col">単価(税込)</th>
                <th scope = "col">個数</th>
                <th scope = "col">小計</th>
              </tr>
            <% @order.order_details.each do |order_detail| %>
              <tr>
                <th><%= order_detail.item.name %></th>
                <th><%= order_detail.item.add_tax_price %></th>
                <th><%= order_detail.amount %></th>
                <th><%= order_detail.subtotal %></th>
              </tr>
            <% end %>
        </tbody>
      </table>
    </td>
</div>




