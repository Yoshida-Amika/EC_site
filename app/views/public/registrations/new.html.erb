<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="form-group">
  <div class="field">
    <a><label class="col-sm-2">名前</label>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </a>
  </div>

   <div class="field">
    <a><label class="col-sm-2">フリガナ</label>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </a>

  <div class="field">
     <a><label class="col-sm-2">メールアドレス</label>
     <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </a>
  </div>

  <div class="field">
    <a><label class="col-sm-2">郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </a>
  </div>

  <div class="field">
    <a><label class="col-sm-2">住所</label>
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
    </a>
  </div>

   <div class="field">
    <a><label class="col-sm-2">電話番号（ハイフンなし）</label>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </a>
  </div>

  <div class="field">
    <a><label class="col-sm-2">パスワード（６文字以上）</label>
    <% if @minimum_password_length %>

    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </a>
  </div>

  <div class="field">
    <a><label class="col-sm-2">パスワード（確認用）</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </a>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",  class:"btn btn-success" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>

<a><%= link_to 'こちら', '/customers/sign_in' %>
からログインしてください。 </a>

